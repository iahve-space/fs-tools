{
  "name": "fs_tools",
  "private": true,
  "type": "module",
  "scripts": {
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "semantic-release": "semantic-release",
    "semver:github": "semantic-release -e .releaserc.github.cjs",
    "semver:gitlab": "semantic-release -e .releaserc.gitlab.cjs",
    "semver:local": "semantic-release --no-ci -e ./semantic-version-only.config.cjs",
    "cz": "cz",
    "prepare": "if [ \"$CI\" != \"true\" ]; then husky install; fi"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@semantic-release/gitlab": "^13.2.9",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.0.1",
    "husky": "^9.1.6",
    "semantic-release": "^24.2.9"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
